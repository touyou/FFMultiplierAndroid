<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dev.touyou.ffmultiplier.Activity.RankingActivity" android:background="@color/colorGreenMain">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/pagerView" android:layout_weight="9">
                <android.support.v4.view.PagerTabStrip android:layout_width="match_parent"
                                                       android:layout_height="wrap_content" android:elevation="0dp"
                                                       android:clickable="true"></android.support.v4.view.PagerTabStrip>
        </android.support.v4.view.ViewPager>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Your Rank: --"
                android:id="@+id/yourRankTextView" android:layout_weight="0.8" android:gravity="center"
                android:background="#ffffff" android:textColor="@color/colorBlackSecond"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="share"
                    android:id="@+id/rankShareButton" android:layout_weight="1" android:background="@color/colorGreenMain"
                    android:onClick="shareBtn"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="register"
                    android:id="@+id/button7" android:layout_weight="1" android:background="@color/colorGreenMain"
                    android:onClick="registerBtn"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
